---
interface Props {
  as?: 'a'|'button'
  href?: string
  variant?: 'primary'|'ghost'
  size?: 'sm'|'md'|'lg'
}
const { as='button', href, variant='primary', size='md', ...rest } = Astro.props
const base = 'inline-flex items-center justify-center rounded-2xl font-medium focus:outline-none focus-visible:ring px-5 py-2';
const variants = { primary: 'bg-primary text-white hover:opacity-90', ghost:'border border-current text-text hover:bg-muted' }
const sizes = { sm:'text-sm px-3 py-1.5', md:'text-base', lg:'text-lg px-6 py-3' }
const cls = `${base} ${variants[variant]} ${sizes[size]}`
---
{as === 'a'
  ? <a class={cls} href={href} {...rest}><slot /></a>
  : <button class={cls} {...rest}><slot /></button>}

---
import Container from '../components/Container.astro'
import Button from '../components/Button.astro'
interface Action { label: string; href: string }
interface Props {
  eyebrow?: string
  title: string
  subtitle?: string
  actions?: Action[]
  image?: { src:string; width:number; height:number; alt?:string; priority?:boolean }
}
const { eyebrow, title, subtitle, actions = [], image } = Astro.props
---
<section class="py-18">
  <Container>
    {eyebrow && <p class="text-sm text-muted mb-2">{eyebrow}</p>}
    <h1 class="text-display">{title}</h1>
    {subtitle && <p class="mt-3 max-w-prose text-body">{subtitle}</p>}
    {actions.length > 0 && (
      <div class="mt-6 flex gap-3">
        {actions.map(a => <Button as="a" href={a.href}>{a.label}</Button>)}
      </div>
    )}
    {image && (
      <img
        class="mt-8 rounded-2xl"
        src={image.src}
        width={image.width}
        height={image.height}
        alt={image.alt ?? ''}
        loading={image.priority ? 'eager' : 'lazy'}
        sizes="(max-width: 768px) 100vw, 960px"
      />
    )}
  </Container>
</section>
